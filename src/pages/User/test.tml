const [index, setIndex] = useState(0);

const handleNext = () => {
  setIndex((prevIndex) => (prevIndex + 1) % testimonials.length);
};

const handlePrev = () => {
  setIndex(
    (prevIndex) => (prevIndex - 1 + testimonials.length) % testimonials.length
  );
};

const slideIn = useSpring({
  opacity: 1,
  transform: "translateX(0%)",
  from: { opacity: 0, transform: "translateX(100%)" },
  reset: true,
  config: { duration: 300 },
});

<section className="mb-10">
  <div className="container mx-auto">
    <div className="text-center text-black mb-10">
      <h1 className="text-4xl font-bold">Testimonials</h1>
    </div>

    <div className="flex justify-center items-center gap-10">
      <FaLongArrowAltLeft
        className="cursor-pointer text-2xl"
        onClick={handlePrev}
      />

      <animated.div
        style={slideIn}
        className="p-7 bg-white rounded-lg  max-w-xl"
      >
        <div className="flex justify-center">
          <div className="flex justify-center mb-4">
            <img
              className="w-40 h-40 rounded-full object-cover"
              src={testimonials[index].image}
              alt="Profile"
            />
          </div>
        </div>

        <div className="text-center mb-4">
          <p className="text-lg italic">"{testimonials[index].text}"</p>
        </div>

        <div className="text-center">
          <p className="text-sm text-gray-500 mb-2">
            {testimonials[index].date}
          </p>
          <h2 className="text-xl font-semibold">{testimonials[index].name}</h2>
          <p className="text-sm text-gray-600">{testimonials[index].title}</p>
        </div>
      </animated.div>

      <FaLongArrowAltRight
        className="cursor-pointer text-2xl"
        onClick={handleNext}
      />
    </div>
  </div>
</section>;
